# =========================
# Workana Scraper (tu repo original)
# =========================
URL=https://www.workana.com/jobs?language=es&publication=1d&skills=html
MAX_AGE_HOURS=3
WATCH_MODE=true
INTERVAL_MINUTES=10
MAX_PAGES=

# Persistencia del scraper
# If you provide only a filename (no path), files will be stored under the
# repository `data/` folder (e.g. `data/workana_jobs.csv`). You can also set
# an absolute or relative path if you prefer.
CSV_FILE=workana_jobs.csv
JSON_FILE=workana_jobs.json

# =========================
# Notificaciones (tu sistema original)
# =========================
NOTIFY_TELEGRAM=true
NOTIFY_EMAIL=false

# Telegram (formato original)
TG_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TG_CHAT=YOUR_CHAT_ID

# SMTP (si lo usás)
SMTP_SERVER=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_TO=

# =========================
# Pipeline de Propuestas (repo 2)
# =========================
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Telegram (pipeline nuevo)
# (podés repetir los mismos valores de TG_TOKEN/TG_CHAT)
TG_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TG_CHAT_ID=YOUR_CHAT_ID

# Playwright / Workana session
# Default is config/workana_state.json inside the repo. You can override with
# WORKANA_STATE or WORKANA_STATE_FILE to point elsewhere.
WORKANA_STATE_FILE=config/workana_state.json